###
#  Defines coding formatting
##

root = true

##
# Main configurations
##
[*]
charset = utf-8

end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

indent_style = space
indent_size = 2

##
# Makefiles use tabs
##
[Makefile]
indent_style = tab

##
# Configurations with four spaces
##
[{**.java|**.groovy|**.py}]
indent_size = 4


