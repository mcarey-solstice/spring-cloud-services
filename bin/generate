#!/usr/bin/env bash

source "$( cd "$( dirname "${BASH_SOURCE[0]}" )" && pwd )/common.sh"

function generate() {
  if [[ $# -lt 2 ]]; then
    echo "Usage:  generate TEMPLATE DESTINATION"
    echo "  TEMPLATE (string) Name of the template to copy over"
    echo ""
    return 1
  fi

  local -a vars=()
  while :; do
    case "$1" in
      --* )
        vars+=${1/--/}
        ;;
      -- )
        shift
        break
        ;;
      * )
        break
        ;;
    esac
    shift
  done

  local template="$1"
  local destination="$2"
  local file="${template}/$destination$ext"

  if [[ -f "$file" ]]; then
    {
      echo "Error: $file already exists"
      echo "  Cowardly refusing to continue"
    } >&2
    return 2
  fi

  vars+=("$template=$destination")

  local tmp=$( mktemp )
  trap "rm -f $tmp" EXIT

  local tpl_file=$( echo templates/$template.tpl.* )
  local ext=${tpl_file/templates\/$template.tpl/}

  cp -p templates/"$template".tpl.* $tmp

  for var in ${vars[@]}; do
    local var_key="${var%%=*}"
    local var_val="${var##*=}"

    sed -i.bak "s/{{ \$$var_key }}/$var_val/g" $tmp
    if [[ $? -ne 0 ]]; then
      return 50
    fi
  done

  mv $tmp $file
}

if [[ ${BASH_SOURCE[0]} != $0 ]]; then
  export -f generate
else
  generate "${@:-}"
  exit $?
fi
